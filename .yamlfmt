# https://github.com/google/yamlfmt/blob/main/docs/config-file.md
version: 1
formatters:
  basic:
    include_document_start: false # Omit ---
    line_ending: lf
    line_width: 80
    indent_sequences: true
    indent_mappings: true
    indent: 4
    there_is_no_spaceless_tag: false
    non_empty_sequence_collapses_to_single_line: false
    key_value_pair_single_line_threshold: 0
    key_value_pair_include_space_before_colon: true
    remove_starting_empty_lines: false
    remove_trailing_empty_lines: false
